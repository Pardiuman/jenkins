pipeline{
    agent any
    stages{
        stage('quality gates check'){
            agent{
            docker {
                image 'maven:3.9.3-eclipse-temurin-17'
                args '--user root'
                
            }
        }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonarqube-secret') {
                        sh 'mvn sonar:sonar'
                    }
                
                }
                
            }

        }
        
    }
    
}


