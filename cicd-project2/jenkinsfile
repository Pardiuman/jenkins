pipeline{
    agent any
    stages{
        stage('quality gates check'){
            agent{
                docker {
                    image 'maven'
                    // args '-user root'

                }
            }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-secret') {
                        sh 'mvn sonar:sonar'
                    }
                
                
                    sh 'cd cicd-project2 && mvn clean install'
                }
            }

        }   
        
    }
    
}


