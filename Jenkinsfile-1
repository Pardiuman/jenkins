pipeline{
    agent none
    environment{
        DOCKER_USERNAME='pardiuman'
        DOCKER_PASSWORD=credentials('docker-passwd')
    }
    stages{
        stage('build stage'){
            agent{
                docker{
                    image 'maven:3-jdk-8-alpine'
                }
            }
            steps{
                sh 'mvn --version'
                sh '''
                    docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD
                '''
                // sh 'anything'
            }
            post{
                failure{
                    echo "need to wrok on this"
                }
            }
        }
        stage('echo'){
            agent any
            steps{
                echo 'second stage'
            }
        }
    }
    post{
        success{
            echo 'pipeline runs successdully'
        }
    }
}