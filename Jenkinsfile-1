pipeline{
    agent none
    stages{
        stage('build stage'){
            agent{
                docker{
                    image 'maven:3-jdk-8-alpine'
                }
            }
            steps{
                sh 'mvn --version'
            }
        }
        stage('echo'){
            agent any
            steps{
                echo 'second stage'
            }
        }
    }
    post{
        success{
            echo 'pipeline runs successdully'
        }
    }
}